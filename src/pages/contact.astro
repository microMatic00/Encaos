---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
// import ContactForm from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import PageHero from '../components/PageHero.astro';
---

<Layout title="Contacto - Encaos">
  <Header />
  <main>
    <PageHero 
      title="Contáctanos" 
      description="Estamos aquí para ayudarte con cualquier pregunta que puedas tener sobre nuestros servicios."
    />
    <!-- <ContactForm /> -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800/50">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <h2 class="text-2xl font-bold mb-4">Formulario de contacto temporalmente no disponible</h2>
          <p class="mb-8">Estamos trabajando para restaurar el formulario de contacto. Por favor, vuelve a intentarlo más tarde.</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout> 
